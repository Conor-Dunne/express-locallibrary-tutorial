extends layout

block content
    h1 Title: #{book.title}
    p Id: #{book.id}
    
    if bookInstances.length

        p #[strong Delete the following book instances before attempting to delete genre]

        div(style='margin-left: 20px; margin-top:20px')

            h4 Book instances 

            ul 
            each bookInstance in bookInstances
                li 

                 a(href=bookInstance.book.url) #{bookInstance.book.title} : #{bookInstance.imprint}
                
    else 
      p Do you really want to delete this book?

      form(method='POST' action='')
        div.form-group 
          input#bookid.form-control(type='hidden', name='id', required='true', value=book._id )
        
        button.btn.btn-primary(type='submit') Delete